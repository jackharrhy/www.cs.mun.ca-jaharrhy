---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<style is:global>
	* {
		box-sizing: border-box;
	}
</style>

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<title>{title}</title>
</head>

<body>
	<slot />
</body>

</html>