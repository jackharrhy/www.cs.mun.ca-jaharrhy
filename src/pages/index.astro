---
import Layout from "@layouts/Layout.astro";
import Myself from "@components/Myself.astro";
import EsteemedColleagues from "@components/EsteemedColleagues.astro";
import Linkbox from "@components/Linkbox.astro";
import Projects from "@components/Projects.astro";
import Quotes from "@components/Quotes.astro";
---

<style>
	body {
		display: flex;
		background-color: #fdf2fe;
	}

	main {
		margin: 1rem auto;
		display: flex;
		flex-direction: column;
	}

	.created-modified {
		font-style: italic;
	}

	.group1 {
		display: grid;
		margin: 2rem;
		grid-template-columns: 23rem 35rem;
		grid-template-rows: 10rem 1fr;
		gap: 2rem;
		grid-template-areas:
			"colleagues linkbox"
			"colleagues projects";
	}

	.linkbox,
	.projects,
	.colleagues {
		display: flex;
		flex-direction: column;
		justify-content: space-around;
		gap: 2rem;
	}

	.linkbox {
		grid-area: linkbox;
	}

	.projects {
		grid-area: projects;
	}

	.colleagues {
		grid-area: colleagues;
		flex-direction: column;
	}

	.to-void {
		height: 100%;
		background-color: black;
		color: limegreen;
		display: flex;
		align-items: center;
		justify-content: center;
		border: 10px inset rgba(255, 255, 255, 0.75);
	}

	.to-void p {
		margin: 0;
		text-align: center;
		font-size: 1.5rem;
	}
</style>

<Layout title="~jaharrhy - labnet garden">
	<main>
		<Myself />
		<div class="group1">
			<div class="colleagues">
				<EsteemedColleagues />
				<a href="./void/" class="to-void">
					<p>enter the void</p>
				</a>
			</div>
			<div class="linkbox">
				<Linkbox />
			</div>
			<div class="projects">
				<Projects />
			</div>
		</div>
		<Quotes />
		<div class="created-modified">
			<h5>
				Created: April 9th, 2019
				<br>
				Last Modified: July 14th, 2022
			</h5>
		</div>
	</main>
</Layout>