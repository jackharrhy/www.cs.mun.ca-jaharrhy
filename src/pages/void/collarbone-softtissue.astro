---
import Layout from "@layouts/Layout.astro";
import Back from "@components/Back.astro";
---

<style>
  html,
  body {
    margin: 0;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-family: Arial, Helvetica, sans-serif;
  }

  main {
    display: flex;
    flex-direction: column;
    background-color: black;
    padding: 1rem;
    border-radius: 0.5rem;
    color: white;
  }

  img {
    max-height: 60vh;
  }

  h1 {
    margin: 0 0 1.5rem 0;
  }

  a {
    border-radius: 6px;
    padding: 0.5rem;
  }

  main div {
    display: flex;
    justify-content: center;
    gap: 2rem;
  }

  div a {
    background-color: white;
  }
</style>

<Layout title="collarbone softtissue">
  <Back />
  <img src="../../downloads/collarbone-softtissue/icon.svg" />
  <main>
    <h1>collarbone-softtissue-v1</h1>
    <div>
      <a href="../../downloads/collarbone-softtissue/collarbone-softtissue-win-v1.zip">win</a>
      <a href="../../downloads/collarbone-softtissue/collarbone-softtissue-mac-v1.zip">mac</a>
      <a href="../../downloads//collarbone-softtissue/collarbone-softtissue-nix-v1.zip">nix</a>
    </div>
  </main>
</Layout>