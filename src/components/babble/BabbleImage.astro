---
import { Image } from "astro:assets";
const {
  src,
  alt,
  caption,
  credits,
  creditsUrl,
  width,
  height,
  containerHeight,
  extraSpace,
} = Astro.props;
---

<figure>
  <Image src={src} alt={alt ?? caption} width={width} height={height} />
  {
    (caption || (credits && creditsUrl)) && (
      <figcaption>
        {caption}
        {credits && creditsUrl && (
          <>
            <a href={creditsUrl}>({credits})</a>
          </>
        )}
      </figcaption>
    )
  }
</figure>

<style define:vars={{ containerHeight, extraSpace }}>
  figure {
    margin: 1.5rem calc(-1 * var(--extraSpace, 10rem) / 2);
    width: calc(100% + var(--extraSpace, 10rem));
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: var(--containerHeight, auto);
  }
  figcaption {
    text-align: right;
    font-size: 0.9rem;
  }
  a {
    opacity: 0.85;
  }
  img {
    width: 100%;
    height: 100%;
    max-width: 90vw;
    max-height: 70vh;
    object-fit: contain;
  }
</style>
