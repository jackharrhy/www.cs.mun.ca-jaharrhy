---
import { Image } from "astro:assets";
const { src, alt, caption, credits, creditsUrl, width, height } = Astro.props;
---

<figure>
  <Image src={src} alt={alt ?? caption} width={width} height={height} />
  {
    (caption || (credits && creditsUrl)) && (
      <figcaption>
        {caption}
        {credits && creditsUrl && (
          <>
            <a href={creditsUrl}>({credits})</a>
          </>
        )}
      </figcaption>
    )
  }
</figure>

<style>
  figure {
    --extra-space: 10rem;
    margin: 2rem calc(-1 * var(--extra-space) / 2);
    width: calc(100% + var(--extra-space));
    display: flex;
    justify-content: center;
  }
  figcaption {
    text-align: right;
    font-size: 0.9rem;
  }
  a {
    opacity: 0.7;
  }
  img {
    width: 100%;
    max-width: 90vw;
    max-height: 70vh;
    object-fit: contain;
    height: auto;
  }
</style>
